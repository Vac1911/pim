#!/usr/bin/env node

const path = require('path');
const Map = require('../tileserver/builder/map');
const features = require('../tileserver/data/world').features;

const storagePath = path.resolve(__dirname, '../public/tilemap');
const map = new Map(3, storagePath)

for(const feature of features) {
    map.createFeature(feature, {strokeStyle: 'white'});
}

map.run();

